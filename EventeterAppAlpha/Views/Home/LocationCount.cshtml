@model IEnumerable<EventeterAppAlpha.Models.GetCountDistinctLocations_Result>
@{
    ViewBag.Title = "LocationCount";
}
<button type="button" class="btn btn-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
    Home
</button>
<h2>LocationCount</h2>

<div class="panel panel-default">
    <div class="panel-heading"> Current total number of different countries, where users are hosting sporting events come join the fun!</div>
    <div class="panel-body">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().NumberOfCountries)

                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.NumberOfCountries)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>