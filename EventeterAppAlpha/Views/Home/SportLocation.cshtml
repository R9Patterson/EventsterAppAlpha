@model IEnumerable < EventeterAppAlpha.Models.GetInnerJoinSport_and_Location_Result>
@{
    ViewBag.Title = "SportLocation";
}
<button type="button" class="btn btn-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
    Home
</button>
<h2>Sport Locations</h2>

<div class="panel panel-default">
    <div class="panel-heading"> Here's a list of sports played at these locations</div>
    <div class="panel-body">
        <table class ="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SportName)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.SportName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Address)
                    </td>
                </tr>
               
            }
        </table>
    </div>
</div>